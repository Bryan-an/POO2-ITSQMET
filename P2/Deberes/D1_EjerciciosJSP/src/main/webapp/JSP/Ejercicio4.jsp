    </head>
    <body>
        <%
            char membership = request.getParameter("membership").charAt(0);
            int discount = 0;

            switch (membership) {
                case 'a':
                    discount = 10;
                    break;
                case 'b':
                    discount = 8;
                    break;
                case 'c':
                    discount = 6;
                    break;
            }

            out.println("<div class='container my-5'>");
            out.println("<h3 class='text-center'>");
            out.println("Su descuento es: " + discount + " %");
            out.println("</h3>");
            out.println("</div>");
        %>
    </body>
